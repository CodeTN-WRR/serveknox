{% extends 'main.twig' %}
{% block ind_link %}
    <link rel="stylesheet" href="/views/css/events.css">
{% endblock ind_link %}
{% block content %}
    <div class="row">
    <div class="large-12 columns">
      <div class="row">
 
  <!-- Side Bar -->
 
        <div class="large-4 small-12 columns">
 
          <img src="/views/img/logo.jpg">
 
          <div class="hide-for-small panel">
            <h3>Header</h3>
            <h5 class="subheader">Risus ligula, aliquam nec fermentum vitae, sollicitudin eget urna. Donec dignissim nibh fermentum odio ornare sagittis.
            </h5>
          </div>
 
          <a href="#">
          <div id="total" class="panel callout radius">
            <h6>100 Events Available</h6>
          </div>
          </a>
 
        </div>
 
    <!-- End Side Bar -->
 
 
    <!-- Thumbnails -->
    
    {% for event in events %}
		
			<div id="main-cont" class="large-8 columns">
          <div class="row">
 
            <div class="large-4 small-6 columns">
              <img src="{{event["eventphoto"]}}">
 
              <div class="panel">
                <h5>{{event["eventname"]}}</h5>
                <h6 class="subheader">{{event["eventdate"]}}</h6>
              </div>
      </div>
			
			{% endfor %}
 
              </div>
            </div>
          </div>
        </div>
      </div>
      </div>
  </div>
{% endblock content %}